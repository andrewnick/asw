<!DOCTYPE html>
<html>
<head>
  <title>Asw</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="initial-scale=1, maximum-scale=1">
  <script src="https://use.typekit.net/zct7tvj.js"></script>
  <script>try{Typekit.load({ async: true });}catch(e){}</script>
</head>
<body>
	<% flash.each do |key, value| %>
	  <span class='<%="flash flash-#{key}"%>'><%= value %></span>
	  <script type="text/javascript">
	    if ($(".flash.flash-alert").length){
	      toastr.warning($(".flash.flash-alert"), {timeOut: 10000});
	    }
	    if ($(".flash.flash-notice").length){
	      toastr.success($(".flash.flash-notice"), {timeOut: 10000});
	    }
	  </script>
	<% end %>

	<% unless current_page?(controller: 'devise/sessions', action: 'new') || current_page?(controller: '/pages', action: 'home') %>
		<%= render partial: 'layouts/nav' %>
	<% end %>

	<% if current_page?(controller: '/pages', action: 'home') %>
		<div class="container-pad home">
			<%= yield %>
		</div>
	<% else%>
		<div class="container-pad">
			<%= yield %>
		</div>
	<% end %>
	<%#= render partial: 'layouts/wet_wedding' %>
	</body>
</body>
</html>
