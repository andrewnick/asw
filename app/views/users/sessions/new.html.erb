<div class="container-center">
  <h1>Andrew and Sarah's Wedding</h1>
</div>
<div class="container-center">
  <h2>Log In</h2>
</div>
<div class="container-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log In", class: "btn btn-yellow btn-full" %>
    </div>
  <% end %>
</div>